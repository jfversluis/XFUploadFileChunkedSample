<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFUploadFile.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="File Upload Sample" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label x:Name="StatusLabel" Text="Pick a file to upload." FontSize="Title" Padding="30,10,30,10"/>
        <ProgressBar x:Name="UploadProgress" IsVisible="False" />
        <Button Text="Pick and Upload" Clicked="UploadButtonClicked" x:Name="UploadButton" />
        <Button Text="Pick and Upload Chunked" Clicked="UploadChunkedButtonClicked" x:Name="UploadChunkedButton" />
        <Button Text="Cancel upload" IsEnabled="False" Clicked="CancelButtonClicked" x:Name="CancelButton"/>
    </StackLayout>

</ContentPage>
